<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.jakubkalinowski.contractfoxandroid.EstimateActivity"
    tools:showIn="@layout/activity_estimate">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- STEP 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="vertical"
            android:elevation="5dp"
            android:background="@drawable/myrect">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
                android:shadowColor="@color/md_material_blue_600"
                android:shadowDx="8"
                android:shadowDy="8"
                android:textStyle="bold"
                android:shadowRadius="8"
                android:text="@string/step1" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/project_title_text_wrapper"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <EditText
                    android:id="@+id/project_title_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColorHint="@color/cardview_shadow_start_color"
                    android:textColorLink="@color/md_material_blue_600"
                    android:textColor="#f43939"
                    android:textSize="18dp"
                    android:textStyle="italic"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    android:hint="@string/project_title" />

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
                android:textStyle="bold"
                android:text="@string/project_description"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/detail_description_text_wrapper"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <EditText
                    android:id="@+id/detail_description_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    android:minHeight="50dp"
                    android:textColorHint="@color/cardview_shadow_start_color"
                    android:textColorLink="@color/md_material_blue_600"
                    android:textColor="#f43939"
                    android:textSize="18dp"
                    android:gravity="start"
                    android:hint="@string/project_description_holder"/>
            </android.support.design.widget.TextInputLayout>


        </LinearLayout>

        <!-- END OF STEP 1 -->

    <!-- STEP 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="6dp"
        android:elevation="5dp"
        android:background="@drawable/myrect">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
            android:shadowColor="@color/md_material_blue_600"
            android:shadowDx="8"
            android:shadowDy="8"
            android:textStyle="bold"
            android:shadowRadius="8"
            android:text="@string/step2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
            android:textStyle="bold"
            android:text="@string/measurements_description"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/item_area_specs_text_wrapper"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">
            <EditText
                android:id="@+id/item_area_specs_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textColorHint="@color/cardview_shadow_start_color"
                android:textColorLink="@color/md_material_blue_600"
                android:textColor="#f43939"
                android:textSize="18dp"
                android:textStyle="italic"
                android:hint="@string/measurements"/>
        </android.support.design.widget.TextInputLayout>

        <Switch
            android:id="@+id/switch_q1"
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
            android:text="@string/question1"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"/>

        <Switch
            android:id="@+id/switch_q2"
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
            android:text="@string/question2"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"/>

    </LinearLayout>
    <!-- END OF STEP 2 -->


        <!-- STEP 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="vertical"
            android:elevation="5dp"
            android:background="@drawable/myrect">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
                android:shadowColor="@color/md_material_blue_600"
                android:shadowDx="8"
                android:shadowDy="8"
                android:textStyle="bold"
                android:shadowRadius="8"
                android:text="@string/step3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
                    android:text="@string/img_picture_text"
                    android:textSize="16dp"/>

                <TextView
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
                    android:text="@string/img_upload_text"
                    android:textSize="16dp"/>

            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:background="#fff939">

                <ImageView
                    android:id="@+id/ivCamera"
                    android:layout_weight="1"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_menu_camera"/>

                <ImageView
                    android:id="@+id/ivGallery"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_menu_gallery"/>

                <!--<ImageView-->
                <!--android:id="@+id/ivUpload"-->
                <!--android:layout_weight="1"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:src="@drawable/ic_menu_send"/>-->

            </LinearLayout>
            <ImageView
                android:id="@+id/ivImage"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center"-->
                <!--android:layout_weight="0.08">-->

                <!--<de.hdodenhof.circleimageview.CircleImageView-->
                    <!--xmlns:app="http://schemas.android.com/apk/res-auto"-->
                    <!--android:id="@+id/upload_doc"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="98dp"-->
                    <!--android:src="@drawable/contract_fox"-->
                    <!--app:civ_border_width="2dp"-->
                    <!--app:civ_border_color="#FF000000"/>-->

            <!--</LinearLayout>-->

        </LinearLayout>
        <!-- END OF STEP 3 -->

        <Button
            android:id="@+id/submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="SEND"/>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
