<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.jakubkalinowski.contractfoxandroid.EstimateActivity"
    tools:showIn="@layout/activity_estimate">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- STEP 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="vertical"
            android:elevation="5dp"
            android:background="@drawable/myrect">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
                android:shadowColor="@color/md_material_blue_600"
                android:shadowDx="8"
                android:shadowDy="8"
                android:textStyle="bold"
                android:shadowRadius="8"
                android:text="@string/step1" />
            <!--android:letterSpacing=".5"-->


            <EditText
                android:id="@+id/project_title_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColorHint="@color/cardview_shadow_start_color"
                android:textColorLink="@color/md_material_blue_600"
                android:textColor="#f43939"
                android:textSize="18dp"
                android:textStyle="italic"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:hint="@string/project_title" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
                android:textStyle="bold"
                android:text="@string/location_selection"/>

            <RadioGroup
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="@string/interior"
                    android:onClick="onRadioButtonClicked"
                    android:id="@+id/radio_interior"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="@string/exterior"
                    android:onClick="onRadioButtonClicked"
                    android:id="@+id/radio_exterior"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="@string/backyard"
                    android:onClick="onRadioButtonClicked"
                    android:id="@+id/radio_backyard"/>
            </RadioGroup>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/interior_fragment_content_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <include layout="@layout/content_specific_area_interior" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/exterior_fragment_content_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <include layout="@layout/content_specific_area_exterior" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/backyard_fragment_content_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <include layout="@layout/content_specific_area_backyard" />

                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
        <!-- END OF STEP 1 -->

        <!-- STEP 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="vertical"
            android:elevation="5dp"
            android:background="@drawable/myrect">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
                android:shadowColor="@color/md_material_blue_600"
                android:shadowDx="8"
                android:shadowDy="8"
                android:textStyle="bold"
                android:shadowRadius="8"
                android:text="@string/step2" />
            <!--android:letterSpacing=".5"-->

            <Switch
                android:id="@+id/switch_q1"
                android:paddingLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
                android:text="@string/question1"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"/>

            <Switch
                android:id="@+id/switch_q2"
                android:paddingLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
                android:text="@string/question2"
                android:textSize="16dp"/>
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
                android:textStyle="bold"
                android:text="@string/measurements_description"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textColorHint="@color/cardview_shadow_start_color"
                android:textColorLink="@color/md_material_blue_600"
                android:textColor="#f43939"
                android:textSize="18dp"
                android:textStyle="italic"
                android:hint="@string/measurements"/>

        </LinearLayout>
        <!-- END OF STEP 2 -->

        <!-- STEP 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="6dp"
            android:elevation="5dp"
            android:background="@drawable/myrect">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
                android:shadowColor="@color/md_material_blue_600"
                android:shadowDx="8"
                android:shadowDy="8"
                android:textStyle="bold"
                android:shadowRadius="8"
                android:text="@string/step3" />
            <!--android:letterSpacing=".5"-->


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
                android:textStyle="bold"
                android:text="@string/project_description"/>

            <EditText
                android:id="@+id/description_paragraph_step3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:minHeight="50dp"
                android:textColorHint="@color/cardview_shadow_start_color"
                android:textColorLink="@color/md_material_blue_600"
                android:textColor="#f43939"
                android:textSize="18dp"
                android:gravity="start"
                android:hint="@string/project_description_holder"/>

        </LinearLayout>
        <!-- END OF STEP 3 -->

        <!-- STEP 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="vertical"
            android:elevation="5dp"
            android:background="@drawable/myrect">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
                android:shadowColor="@color/md_material_blue_600"
                android:shadowDx="8"
                android:shadowDy="8"
                android:textStyle="bold"
                android:shadowRadius="8"
                android:letterSpacing=".5"
                android:text="@string/step4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
                    android:text="@string/img_picture_text"
                    android:textSize="16dp"/>

                <TextView
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
                    android:text="@string/img_upload_text"
                    android:textSize="16dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:background="#fff939">

                <ImageView
                    android:id="@+id/ivCamera"
                    android:layout_weight="1"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_menu_camera"/>

                <ImageView
                    android:id="@+id/ivGallery"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_menu_gallery"/>

                <!--<ImageView-->
                    <!--android:id="@+id/ivUpload"-->
                    <!--android:layout_weight="1"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:src="@drawable/ic_menu_send"/>-->

            </LinearLayout>

            <ImageView
                android:id="@+id/ivImage"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <!-- END OF STEP 4 -->

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:id="@+id/sendButton"
            android:padding="5dp"
            android:layout_margin="15dp"
            android:text="SEND"/>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
